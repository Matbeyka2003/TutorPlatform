<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx/17"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="org.teacher_calendar.controller.AuthController"
      stylesheets="@/org/teacher_calendar/css/auth.css"
      spacing="20"
      alignment="CENTER"
      style="-fx-background-color: #f5f5f5;"
      prefWidth="400"
      prefHeight="500">

    <padding>
        <Insets top="40" right="40" bottom="40" left="40"/>
    </padding>

    <!-- Заголовок -->
    <Label text="Tutor Scheduler"
           style="-fx-font-size: 24; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>

    <Label text="Система управления онлайн-репетиторством"
           style="-fx-font-size: 14; -fx-text-fill: #7f8c8d;"/>

    <Separator prefWidth="300"/>

    <!-- Форма аутентификации -->
    <VBox spacing="15" alignment="CENTER_LEFT" prefWidth="300">
        <Label text="Имя пользователя:"
               style="-fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
        <TextField fx:id="usernameField"
                   promptText="Введите имя пользователя"
                   prefHeight="40"/>

        <Label text="Пароль:"
               style="-fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
        <PasswordField fx:id="passwordField"
                       promptText="Введите пароль"
                       prefHeight="40"/>

        <!-- Статус -->
        <Label fx:id="statusLabel"
               wrapText="true"
               prefWidth="300"
               style="-fx-font-size: 12;"/>

        <!-- Прогресс-индикатор -->
        <HBox alignment="CENTER" spacing="10">
            <ProgressIndicator fx:id="progressIndicator"
                               progress="0"
                               visible="false"/>
        </HBox>

        <!-- Кнопки -->
        <HBox spacing="15" alignment="CENTER">
            <Button fx:id="loginButton"
                    text="Войти"
                    onAction="#handleLogin"
                    defaultButton="true"
                    style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-weight: bold; -fx-pref-width: 120; -fx-pref-height: 40;"/>

            <Button fx:id="registerButton"
                    text="Регистрация"
                    onAction="#handleRegister"
                    style="-fx-background-color: #95a5a6; -fx-text-fill: white; -fx-font-weight: bold; -fx-pref-width: 120; -fx-pref-height: 40;"/>
        </HBox>
    </VBox>

    <!-- Информация -->
    <VBox spacing="10" alignment="CENTER" style="-fx-padding: 20 0 0 0;">
        <Separator prefWidth="300"/>
        <Label text="Для тестирования используйте:"
               style="-fx-font-weight: bold; -fx-text-fill: #7f8c8d;"/>
        <Label text="Логин: tutor, Пароль: password123"
               style="-fx-font-size: 12; -fx-text-fill: #7f8c8d;"/>
    </VBox>
</VBox>